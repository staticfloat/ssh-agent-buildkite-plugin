#!/bin/bash

set -eou pipefail

echo "OSTYPE: '${OSTYPE}'"
if [[ "${OSTYPE}" == "msys"* ]]; then
    # Tell the windows service to forget everything, and then die
    /C/Windows/System32/OpenSSH/ssh-agent -D
    powershell -noprofile -command "Stop-Service ssh-agent"
else
    # Kill ssh-agent, to clean up added ssh keys
    ssh-agent -k
fi
